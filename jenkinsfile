pipeline {
    agent any

    tools {
        maven "maven"
        jdk "java8"
    }
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/erasgupta/helm-project.git'
            }
        }
        stage('Deploy') {
          steps {
            sh 'helm install prod-addressbook ./addressbook/ --values ./addressbook/prod.yaml'
         }
        }
    }
}
